#!/usr/bin/env bash
# script name: dmwifi
# Description: Connect to wifi using dmenu
# Dependencies: dmenu, nmcli, Any Nerd Font
# Contributor: WitherCubes
set -euo pipefail
bssid=$(nmcli device wifi list | sed -n '1!p' | cut -b 9- | dmenu -p "Select Wifi ï‡« :" -l 20 -i | cut -d' ' -f1)
pass=$(echo "" | dmenu -P -p "Enter Password :")
if [ ! -z $pass ]
then
    nmcli device wifi connect "$bssid" password "$pass"
else
    echo 'Second Method'
    nmcli device wifi connect "$bssid"
fi
sleep 10
if ping -q -c 2 -W 2 google.com >/dev/null; then
  notify-send "Your internet is working :)"
else
  notify-send "Your internet is not working :("
fi
