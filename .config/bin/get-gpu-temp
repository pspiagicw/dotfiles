#!/bin/sh
temp=`nvidia-smi | awk '/Default/{ print int($3) }'`
if [ "$1" = "--integer" ]
then
    echo "${temp}째C"
    exit 0
fi
if [ $temp -le 50 ]
then
    echo "<fc=#50fa7b>+${temp}째C</fc>"
elif [ $temp -gt 50 ] && [ $temp -le 70 ]
then
    echo "<fc=#ffb86c>+${temp}째C</fc>"
else
    echo "<fc=#ff5555>+${temp}째C</fc>"
fi
