#!/bin/bash
cores=`sensors | grep Core | awk '{ sum += $3 ; n++} END { if (n>0) print int(sum / n);}'`
if [ "$1" = "--integer" ]
then
    echo "${cores}째C"
    exit 0
fi
if [ $cores -le 45 ]
then
    echo "<fc=#50fa7b>+${cores}째C</fc>"
elif [ $cores -gt 45 ] && [ $cores -le 70 ]
then
    echo "<fc=#ffb86c>+${cores}째C</fc>"
else
    echo "<fc=#ff5555>+${cores}째C</fc>"
fi

