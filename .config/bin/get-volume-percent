#!/bin/sh

volume=`pactl get-sink-volume $(pactl get-default-sink) | awk '{ print $12 }'`
intperc=${volume::-1}
if [ $intperc -le 40 ]
then
    echo "<fc=#50fa7b>$volume</fc>"
elif [ $intperc -gt 40 ] && [ $intperc -le 80 ]
then
    echo "<fc=#ffb86c>$volume</fc>"
else
    echo "<fc=#ff5555>$volume</fc>"
fi
